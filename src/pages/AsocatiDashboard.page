            <!-- Let's check if we can have an input field that can be disabled/enabled http://www.tehnrd.com/how-to-disable-visualforce-inputfields/
            <apex:inputField value="{!production.Projected_Value__c}" disabled="true" />
              -->       
                </apex:column>
                <apex:column value="{!commercialization.Actual_Value__c}" headerValue="Actual" width="70px"/> 
                <apex:column value="{!commercialization.Manual_Value__c}" headerValue="Anterior" width="70px"/>
                <apex:column value="{!commercialization.Numerator__c}" headerValue="Variación (%)" width="70px"/>
                <apex:column headerValue="Tendencia" width="70px"/>   
            </apex:pageBlockTable>   
        </apex:pageBlock>
       <apex:pageBlock title="Certificación">
            <apex:pageBlockTable value="{!certificationMetrics}" var="certification">
                <apex:column value="{!certification.M_E_Metric__r.Label__c}" headerValue="Indicador" width="400px"/>
                <apex:column value="{!certification.Projected_Value__c}" headerValue="Objetivo" width="70px">
