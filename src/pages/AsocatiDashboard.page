            </apex:pageBlockTable>          
        </apex:pageBlock>
         <apex:pageBlock title="Inclusión social y calidad de vida">
            <apex:pageBlockTable value="{!socialMetrics}" var="social">
                <apex:column value="{!social.M_E_Metric__r.Label__c}" headerValue="Indicador" width="400px"/>
                <apex:column value="{!social.Projected_Value__c}" headerValue="Objetivo" width="70px">
                   <!-- Let's check if we can have an input field that can be disabled/enabled http://www.tehnrd.com/how-to-disable-visualforce-inputfields/
