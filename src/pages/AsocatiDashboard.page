                <apex:column value="{!quality.Actual_Value__c}" headerValue="Actual" width="70px"/> 
                <apex:column value="{!quality.Manual_Value__c}" headerValue="Anterior" width="70px"/>
                <apex:column value="{!quality.Numerator__c}" headerValue="Variación (%)" width="70px"/>
                <apex:column headerValue="Tendencia" width="70px"/>   
            </apex:pageBlockTable> 
        </apex:pageBlock>
       <apex:pageBlock title="Comercialización">
            <apex:pageBlockTable value="{!commercializationMetrics}" var="commercialization">
                <apex:column value="{!commercialization.M_E_Metric__r.Label__c}" headerValue="Indicador" width="400px"/>
