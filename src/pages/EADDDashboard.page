                    <a href="javascript:openMap('HUBS', null, null, null, null, null, null, null, '20130513174', 'EADD');">Enlarge Map</a>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
        </apex:pageBlock>
