<apex:page tabStyle="LAC_Farmer_Details__c" standardController="LAC_Farmer_Details__c" extensions="LacFarmerProfilePageController" language="{!PageLanguage}">
    <apex:pageBlock >
        <apex:pageBlockSection collapsible="false" columns="1">
            <apex:outputField value="{!CoffeeBaseline.Total_Farm_Area__c}"/>
            <apex:outputText label="{!$Label.CoffeePlantedArea}"  value="{!CoffeePlantedArea}"/>
            <apex:outputText label="Variedades" value="{!CoffeeVarieties}"/> 
            <apex:outputText label="{!$Label.Productivity}" value="{!Productivity}"/>
            <apex:outputText label="{!$Label.Production}" value="{!Production}"/> 
            <apex:outputText label="{!$Label.Certifications}" value="{!Certifications}"/>  
        </apex:pageBlockSection> 

        <apex:pageBlockSection title="{!$Label.Commercialization}" collapsible="false" columns="1">
            <apex:outputField value="{!CblCommercialization.producedCoffeeDestiny__c}"/>
            <apex:outputField value="{!CblCommercialization.lastHarvestPercCoffeeSoldToCoop__c}"/>
            <apex:outputField value="{!CblCommercialization.statusSoldCoffee__c}"/>
            <apex:outputField value="{!CblCommercialization.buysCoffee__c}"/>
            <apex:outputField value="{!SignatureFarm.coffeProcessingPlace__c}"/>
        </apex:pageBlockSection> 
        
        <apex:pageBlockSection title="{!$Label.Starbucks_segmentation}" collapsible="false" columns="1">
            <apex:pageBlockTable value="{!CoffeeBaselines}" var="cbl">
                <apex:column headervalue="Baseline" value="{!cbl.baselineName__c}"/> 
                <apex:column headervalue="Segmento" value="{!cbl.Sbux_Segment__c}"/>
                <apex:column headervalue="Probabilidad" value="{!cbl.Sbux_Segment_Probability__c}"/>
            </apex:pageBlockTable>
        </apex:pageBlockSection>
    </apex:pageBlock>
</apex:page>