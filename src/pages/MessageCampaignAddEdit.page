<apex:page standardController="MessageCampaign__c"
	extensions="MessageCampaignController" tabStyle="MessageCampaign__c">
	<apex:includeScript value="{!URLFOR($Resource.jquery, 'js/jquery-1.5.1.min.js')}" />
	<apex:includeScript value="{!URLFOR($Resource.JQueryDurationPicker, 'jquery.durationPicker.min.js')}" />
	<apex:stylesheet value="{!URLFOR($Resource.JQueryDurationPicker, 'durationPicker.css')}" />

	<script type="text/javascript">
    	var j$ = jQuery.noConflict();
    	j$(document).ready(function(){
			j$(".durationPicker").durationPicker();	
    	});
    </script>
    
	<apex:form id="messageCampaign">
		<apex:pageBlock >
			<apex:pageBlockButtons >
				<apex:commandButton action="{!save}" value="{!$Label.SAVE}" />
				<apex:commandButton action="{!cancel}" value="{!$Label.CANCEL}" />
			</apex:pageBlockButtons>
			<apex:pageBlockSection columns="1" >
				<apex:inputField required="true" value="{!MessageCampaign__c.Name}" />
				<apex:inputField required="true" value="{!MessageCampaign__c.Campaign_Type__c}"/>
				<apex:inputField styleClass="durationPicker" value="{!MessageCampaign__c.Max_Duration__c}"/>
				<apex:inputField value="{!MessageCampaign__c.Description__c}"/>
			</apex:pageBlockSection>
		</apex:pageBlock>
	</apex:form>
</apex:page>